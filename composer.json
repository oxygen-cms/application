{
    "name": "oxygen/application",
    "description": "The Oxygen Starter Application.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "pda/pheanstalk": "~3.0",
        "oxygen/mod-auth": "~0.1.0",
        "oxygen/mod-preferences": "~0.1.0",
        "oxygen/mod-dashboard": "~0.2.0",
        "oxygen/mod-pages": "~0.2.0",
        "oxygen/mod-media": "~0.1.0",
        "oxygen/mod-marketplace": "~0.2.0",
        "oxygen/mod-security": "~0.1.0",
        "oxygen/mod-import-export": "~0.1.0",
        "oxygen/mod-events": "~0.1.0",
        "oxygen/ui-base": "~0.3.0",
        "oxygen/ui-theme": "~0.2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "dev-master",
        "barryvdh/laravel-ide-helper": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "repositories": [
        {
          "type": "vcs",
          "url": "https://github.com/oxygen-cms/laravel-doctrine"
        },
        {
          "type": "vcs",
          "url": "https://github.com/oxygen-cms/composer"
        }
    ],
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate",
            "php artisan optimize",
            "php artisan vendor:publish --tag=public --force",
            "php artisan doctrine:schema:update",
            "php artisan migrate:packages"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
